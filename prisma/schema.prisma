generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     String  @id @default(uuid())
  email  String  @unique
  name   String?
  passwd String
}

model Task {
  id          String    @id @default(uuid())
  title       String
  description String?
  due_date    DateTime?
  status      String?   @default("PENDING")
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())
}
